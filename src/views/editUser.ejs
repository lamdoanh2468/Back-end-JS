<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <link rel="icon" type="image/png" href="images/nodejs.png">
  <link rel="stylesheet" href="/css/home.css">
  <style>
    .topnav a.active {
      background-color: tomato;
      color: white;
    }
  </style>
</head>

<body>
  <div class="topnav">
    <a href="/">Home</a>
    <a class="active" href="/create">Update User</a>
    <a href="#contact">Contact</a>
    <a href="#about">About</a>
  </div>
  <div class="add-user-form">
    <form action="/update_user/<%=userEdit.id%>" method="post">
      <fieldset>
        <legend>Edit User Profile:</legend>
        <div class="input-group d-none">
          <label for="id">ID:</label>
          <input type="number" id="id" name="id" value="<%=userEdit.id%>">
        </div>
        <br>
        <div class="input-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" value="<%=userEdit.email%>">
        </div>
        <br>
        <div class="input-group">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" value="<%=userEdit.name%>">
        </div>
        <br>
        <div class="input-group">
          <label for="city">City:</label>
          <input type="text" id="city" name="city" value="<%=userEdit.city%>">
        </div>
        <br>
        <input type="submit" value="Submit">
      </fieldset>
    </form>
  </div>
</body>
</body>

</html>